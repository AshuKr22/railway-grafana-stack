{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "DOCKERFILE",
      "dockerfilePath": "prometheus/Dockerfile"
    },
    "deploy": {
      "startCommand": "sh -c '/setup.sh && prometheus --config.file=/etc/prometheus/prom.yml --web.config.file=/prometheus/config/web-config.yml --storage.tsdb.path=/prometheus --web.console.libraries=/etc/prometheus/console_libraries --web.console.templates=/etc/prometheus/consoles --web.enable-lifecycle --web.listen-address=0.0.0.0:${PORT:-9090}'",
      "restartPolicyType": "ON_FAILURE"
    }
}